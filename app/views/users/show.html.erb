<article class="container">

<br />
<br />
<br />


<h1 class="text-center text__underline">Public Profile</h1>

<h2>
    Username: <%= @user.username %>
</h2>

<h2> 
    User's Name: <%= @user.first_name %> <%= @user.last_name %>
</h2>

 
<br />

<% @user.saved_articles.each do |sa| %>
    <div class="card">
    <div class="card-header">
        <%= link_to sa.article.title, sa.article %>
    </div>
    <div class="card-body">
        <h6 class="card-title"><%= sa.article.short_desc %></h6>
        <p class="card-text">Note: <%= sa.note %></p>
        <p class="card-text"><small class="text-muted"></small></p>
        <%# <a href="#" class="btn btn-primary">Go somewhere</a> %>
        Tags:
        <% sa.article.tags.each do |t| %>
            <span class="badge badge-pill badge-primary"><%= t.name %></span>
        <% end %>
        
    </div>
    </div>

    <br />
<% end %>


</article>